
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/item_relative_layout"
        android:layout_height="120dp"
        android:layout_width="wrap_content">

        <RelativeLayout android:id="@+id/top_section"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                        >

            <ImageView android:id="@+id/date_icon"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:contentDescription="date_icon"
                       android:src="@drawable/date">
            </ImageView>


            <TextView
                    android:id="@+id/activity_date"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text="zzzasdasdasd"
                    android:textColor="#000000"
                    android:layout_toRightOf="@id/date_icon"
                    />

            <TextView
                    android:id="@+id/ppl_going_text"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    android:text="Going:3/9"
                    android:gravity="right"
                    />

            <ImageView android:id="@+id/ppl_going_icon"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_toLeftOf="@id/ppl_going_text"
                       android:contentDescription=""
                       android:src="@drawable/pplgoing"
                    >
            </ImageView>


        </RelativeLayout>

        <View   android:id="@+id/separator_top"
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:visibility="visible"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@id/top_section"
                android:background="#E0E0E0"/>


        <RelativeLayout   android:id="@+id/middle_section"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="5dp"
                          android:layout_below="@id/separator_top"

                >

        <ImageView android:id="@+id/bike_icon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:contentDescription=""
                   android:layout_below="@id/separator_top"
                   android:src="@drawable/bike">
        </ImageView>

        <TextView
                android:id="@+id/activity_title"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:textSize="16sp"
                android:text="Annapurna Trek"
                android:layout_toRightOf="@id/bike_icon"
                />



        </RelativeLayout>

        <View
                android:id="@+id/separator_bottom"
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="visible"
                android:layout_below="@id/middle_section"
                android:background="#E0E0E0"/>


        <LinearLayout android:id="@+id/ppl_photos_linear_layout"
                      android:orientation="horizontal"
                      android:layout_height="fill_parent"
                      android:layout_width="fill_parent"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentBottom="true"
                      android:layout_margin="5dp"
                      android:layout_below="@id/separator_bottom"
                      >

            <ImageView android:id="@+id/ppl2"
                       android:layout_height="30dp"
                       android:layout_width="30dp"
                       android:src="@drawable/chameleon"
                    />

            <ImageView android:id="@+id/ppl1"
                       android:layout_height="30dp"
                       android:layout_width="30dp"
                       android:src="@drawable/ic_launcher"
                    />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>